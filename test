//everything disappears when I try to make the dumpling do anything but stay in one place







class Dump {
  constructor(startingXPos, imageFilename){
    this.xPos = startingXPos;
    this.yPos = 10;
    this.gif = createImg(imageFilename);
  }

  move() {
    xPos += 10;
    this.gif.position(xPos, yPos);
  }
}
